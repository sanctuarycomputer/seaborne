{
  "name": "seaborne",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/*.html",
    "build": "NODE_ENV=production parcel build src/*.html"
  },
  "dependencies": {
    "@sanctucompu/basement": "^1.1.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.1.1"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "sass": "^1.26.10"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,scss,css,md,html}": [
      "prettier --write"
    ]
  }
